generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  events Event[]
  tickets Ticket[]


}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])
  createdAt   DateTime @default(now())
  tickets Ticket[]

}

model Ticket {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  qrCode    String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])
  amount        Int?
paymentRef    String?
paymentStatus String   @default("PENDING")

}


enum Role {
  CREATOR
  EVENTEE
}

